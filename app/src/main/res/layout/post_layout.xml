<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/postProfile"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/postUsername"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/postProfile"
        android:layout_toRightOf="@+id/postProfile"
        android:padding="2dp"
        android:gravity="top"
        android:text="Username"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/postTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postUsername"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_toEndOf="@+id/postProfile"
        android:layout_toRightOf="@+id/postProfile"
        android:padding="1dp"
        android:gravity="top"
        android:text="26 Jan, 2019 at 16:40"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:text="Description "
        android:textSize="18dp"
        android:textStyle="italic"
        android:id="@+id/postDesc"
        />

    <ImageView
        android:id="@+id/postLike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/postDesc"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_like" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/postDesc"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/postLike"
        android:layout_toRightOf="@+id/postLike"
        android:text=""
        android:textSize="18dp"
        android:padding="3dp"
        android:id="@+id/postLikeCount"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/postDesc"
        android:layout_marginStart="295dp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="248dp"
        android:src="@drawable/ic_comment"
        android:id="@+id/postComment"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/postDesc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/postComment"
        android:layout_toRightOf="@+id/postComment"
        android:padding="3dp"
        android:text=""
        android:textSize="18dp"
        android:id="@+id/postCommentCount"/>


</RelativeLayout>